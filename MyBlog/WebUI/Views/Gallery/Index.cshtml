@using WebUI.HtmlHelpers
@model IEnumerable<Domain.Model.Image>
<!DOCTYPE html>
@{
    ViewBag.Title = "Gallery";
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />     
   
      
    <link href="~/s-gallery-master/css/styles.css" rel="stylesheet" />
    <link href="~/s-gallery-master/css/demo-styles.css" rel="stylesheet" />
    <script src="~/s-gallery-master/js/jquery-1.8.2.min.js"></script>
    <script src="~/s-gallery-master/js/plugins.js"></script>
    <script src="~/s-gallery-master/js/screenfull.min.js"></script>
    <script src="~/s-gallery-master/js/scripts.js"></script>
   
    <style>
        #gallery-container {

            margin-top: 60px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#gallery-container').sGallery({
                fullScreenEnabled: true //default is false
            });
        });
    </script>
</head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span> 
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/Home/Index">CBlog</a>
                    <div class="nav-collapse">
                        <ul class="nav unstyled inline">
                            <li class="active"><a href="/Home/Index"><i class="fa fa-home fa-fw"></i>Home</a></li>
                            <li><a href="/Gallery/Index"><i class="fa fa-camera-retro"></i>Gallery</a></li>
                            <li><a href="/Timeline/Index"><i class="fa fa-flask"></i>Timeline</a></li>
                            <li><a href="#cotact"><i class="fa fa-smile-o"></i>About</a></li>
                        </ul>        
                    </div>
                </div>
            </div>
        </div>
       
                   
        <div id="gallery-container">
            <ul class="items--small">
           
                @foreach (var item in Model)
                {
                    if (item.IsSmall == true)
                    {
                        <li class="item"><a href="#">@Html.BuildImage(item)</a></li>
                    }

                }
       
            </ul>
            <ul class="items--big">
                @foreach (var item in Model)
                {
                    if (item.IsSmall == false)
                    {
                        <li class="item--big"><a href="#"><figure>@Html.BuildImage(item) <figcaption class="img-caption"> Caption</figcaption>
                                                          </figure></a></li>
                    }
            
          
                }
            </ul>                     
            <div class="controls">
                <span class="control icon-arrow-left" data-direction="previous"></span> 
                <span class="control icon-arrow-right" data-direction="next"></span> 
                <span class="grid icon-grid"></span>
                <span class="fs-toggle icon-fullscreen"></span>
            </div>
        </div>
       
    </body>
</html>
