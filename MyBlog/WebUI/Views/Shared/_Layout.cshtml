


<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        <title>小跳蚤的个人博客</title>
        

        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 

     
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;          
            }

            .widget h3 { display: block; background: #212121; color: #f1f1f1; text-transform: capitalize; border-radius: 5px; margin-bottom: 10px; text-align: center; padding: 5px 0px;}
            .widget ul li a { font-size: 18px;display: block; padding: 5px 0px; color: #888; border-top: 1px dotted #ccc;}
            .widget ul li a:hover  { background: #fff;color: #f60; text-decoration: none; padding-left: 5px;}
            .widget ul li a:visited{ transition: all 0.4s linear 0s;}

            .banner { position: relative; overflow: auto; }
            .banner li { list-style: none; }
            .banner ul li { float: left; }

            .span8 .row {
                border-bottom: 1px dotted #ccc;
                border-width: 1px;
                margin-bottom: 15px;
                padding-bottom: 15px;
            }
            #back-top{
                position: fixed;
                bottom: 10px;
                right: -10px;
            }
            #back-top span {
                width: 50px;
	            height: 64px;
	            display: block;
	            background:url("/Images/top.png") no-repeat center center;
            }
        </style>
        <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />     
        @*@Scripts.Render("~/bundles/bootstrap")*@
        <script src="~/Scripts/bootstrap/js/jquery-2.0.3.min.js"></script>
        <script src="~/Scripts/bootstrap/js/bootstrap.min.js"></script>
        @*<script src="~/Scripts/bootstrap/js/slide.js"></script>*@
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
      
    </head>

  <body>  
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span> 
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/Home/Index">CBlog</a>
                <div class="nav-collapse">
                    <ul class="nav unstyled inline">
                      <li class="active"><a href="/Home/Index"><i class="fa fa-home fa-fw"></i>Home</a></li>
                      <li><a href="/Gallery/Index"><i class="fa fa-camera-retro"></i>Gallery</a></li>
                      <li><a href="/Timeline/Index"><i class="fa fa-flask"></i>Timeline</a></li>
                      <li><a href="#cotact"><i class="fa fa-smile-o"></i>About</a></li>
                    </ul>        
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="span12">
               
                @Html.Partial("Carousel")
                @RenderBody()

            </div>
        </div>
        <p id="back-top" style="display: block;"><a href="#top"><span></span></a></p>
      </div>
</body>
</html>


