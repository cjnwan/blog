@model int 

@using (Html.BeginForm("AddComment", "Post",FormMethod.Post,new{id="formcomment"}))
 {
     <div>
         <input type="hidden" value="@Model" name="postId"/>
         <input type="hidden"  id="replay" name="replay"/>
         <input type ="hidden" id="replycommentId" name="replycommentId" />
     </div>
    
    <div class="form-group">
    <label for="name" class="col-sm-2 control-label">昵称:</label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" class="required form-control"  placeholder="昵称">
    </div>
  </div>
    <div class="form-group">
    <label for="mail" class="col-sm-2 control-label">邮件</label>
    <div class="col-sm-10">
      <input type="email" id="mail" name ="mail" class="required form-control" id="inputEmail3" placeholder="邮件">
    </div>
  </div>
    <div>
         <label for="content" class="col-sm-2 control-label">内容:</label>
         <div class="col-sm-10">
             <textarea style="margin: 0px 0px 9px;width: 561px;height: 236px;" name ="content"  rows="8"  id="content" aria-required="true" class="required"></textarea>
         </div>
     </div>
    <div class="form-group">
    
    <div class="col-sm-10">
       <button type="submit"  class="btn btn-default">提交评论</button>
    </div>
  </div>
   
     
 }