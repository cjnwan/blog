@{
    ViewBag.Title = "Timeline";
    Layout = null;
}

@model IEnumerable<Domain.Model.Post>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/timeline/css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />    
    <script src="~/timeline/js/modernizr.custom.63321.js"></script>
    
    <style>
        .top {

            margin-top: 60px;
        }

        .thumb .time {
            margin-top: 5px;
        }

    </style>
   
</head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span> 
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/Home/Index">CBlog</a>
                    <div class="nav-collapse">
                        <ul class="nav unstyled inline">
                            <li class="active"><a href="/Home/Index"><i class="fa fa-home fa-fw"></i>Home</a></li>
                            <li><a href="/Gallery/Index"><i class="fa fa-camera-retro"></i>Gallery</a></li>
                            <li><a href="#portfolio"><i class="fa fa-flask"></i>Timeline</a></li>
                            <li><a href="#cotact"><i class="fa fa-smile-o"></i>About</a></li>
                        </ul>        
                    </div>
                </div>
            </div>
        </div>
        <div class="top"></div>
        <div class="container">
            <ul class="timeline">
            
                @foreach(var item in Model)
                {
                    <li class="event">
                        <input type="radio" name="tl-group" checked/>
                        <label></label>
                        <div class="thumb user-@(item.PostId%8)">
                           <span class="time">@item.PostAddedTime.ToShortDateString()</span>
                        </div>
                         
                        <div class="content-perspective">
                            <div class="content">
                                <div class="content-inner">
                                    <h3>@item.PostTitle</h3>
                                    <p>
                                        @if (item.PostContent.Length > 80)
                                        {
                                            @Html.Raw(item.PostContent.Substring(0, 80))
                                        }
                                        @Html.ActionLink("Read More!","Detail","Post", new { title=item.PostTitle },new{@class="btn pull-right",target="_blank"})
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </body>
</html>
